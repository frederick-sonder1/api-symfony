{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!
{% endblock %}

{% block body %}
	<div class="card text-center">
		<h1>Profil</h1>
		<h2 class="card-title">Hello
			{{ app.user.username }}! ✅</h2>
	</div>

	<div class="card text-center">
		<div class="card-body">

			<p class="card-description">Role utilisateur :{{app.user.roles[0]}}
			</p>
			{{ include('profile/_form.html.twig') }}
		</div>

		<a href="{{ path('app_logout') }}" class="btn btn-lg btn-danger">Se déconnecter</a>
	</div>
{% endblock %}
