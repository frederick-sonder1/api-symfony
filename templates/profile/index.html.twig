{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	<div class="container mt-md-2 mt-lg-3 mt-xl-3 mb-md-2 mb-lg-3 mb-xl-3 text-center">
		<h1>Profil</h1>
		<h2 class="card-title">Hello
			{{ app.user.username }}! ✅</h2>
	</div>
	<div class="container  text-center">
		<div class="row align-self-center">
			<div class="card  align-self-center text-center mt-md-2 mt-lg-3 mt-xl-3">
				<div class="card-body">
					<p class="card-description">Role utilisateur :{{app.user.roles[0]}}</p>
					{{ include('profile/_form.html.twig') }}
				</div>
			</div>
			<div class="text-center">
				<a href="{{ path('app_logout') }}" class="btn btn-sm btn-danger mt-md-2 mt-lg-3 mt-xl-3">Se déconnecter</a>
			</div>
		</div>
	</div>
{% endblock %}
